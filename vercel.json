{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build --workspace=client",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/" }
  ]
}
